<% if target.errors.any? %>  
  <div id="error_explanation">  
    <h2><%= t("errors.template.header", 
              :count => target.errors.count, 
              :model => target.class.human_name) %>
    </h2>

    <ul>  
    <% target.errors.full_messages.each do |msg| %>  
      <li><%= msg %></li>  
    <% end %>  
    </ul>  

  </div>  
<% end %>
